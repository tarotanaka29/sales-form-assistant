{
  "manifest_version": 3,
  "name": "営業フォーム自動入力アシスタント",
  "version": "2.1.0",
  "description": "営業代行業務のための問い合わせフォーム自動入力ツール",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png", 
      "128": "assets/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "utils/field-mapping.js",
      "utils/auto-split.js", 
      "content/field-detector.js",
      "content/content.js"
    ]
  }],
  
  "commands": {
    "auto-fill-form": {
      "suggested_key": {
        "default": "Ctrl+B"
      },
      "description": "フォーム自動入力実行"
    }
  },
  
  "options_page": "options/options.html"
}

